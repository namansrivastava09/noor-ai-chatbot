rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This allows read/write access to the messages collection for katyayani_uid
    // The recursive wildcard {document=**} is important to allow list operations (queries).
    match /users/katyayani_uid/messages/{document=**} {
      allow read, write: if true;
    }
  }
}
